{
  "name": "gringo-caliente",
  "version": "1.0.0",
  "description": "A hot sauce webstore",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "cd backend && node backend/server",
    "start:dev": "concurrently \" nodemon backend/server\" \"cd frontend && npm start\"",
    "install": "npm i && cd frontend && npm i",
    "seeder": "node backend/utils/seeder.js",
    "heroku-postbuild": "cd frontend && npm run build && cd .."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NGDino/gringo-caliente.git"
  },
  "keywords": [
    "MERN",
    "Webstore"
  ],
  "author": "Neil dino",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NGDino/gringo-caliente/issues"
  },
  "homepage": "https://github.com/NGDino/gringo-caliente#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.26.2",
    "concurrently": "^6.2.1",
    "cookie-parser": "^1.4.5",
    "country-state-city": "^3.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.12",
    "nodemailer": "^6.6.1",
    "stripe": "^8.167.0",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
